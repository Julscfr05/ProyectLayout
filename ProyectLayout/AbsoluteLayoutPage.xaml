<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectLayout.AbsoluteLayoutPage"
             Title="AbsoluteLayout">
    
    <AbsoluteLayout BackgroundColor="LightSkyBlue">
        <!-- Logo de la aplicación en el centro -->
        <Image Source="logo.png" 
               AbsoluteLayout.LayoutBounds="0.5, 0.3, 200, 200"
               AbsoluteLayout.LayoutFlags="PositionProportional"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>

        <!-- Título de la aplicación, posicionado debajo del logo -->
        <Label Text="¡Bienvenido a nuestra aplicación!"
               FontSize="22"
               TextColor="White"
               AbsoluteLayout.LayoutBounds="0.5, 0.55, -1, -1"
               AbsoluteLayout.LayoutFlags="PositionProportional"
               HorizontalOptions="Center"/>

        <!-- Botón de Iniciar Sesión, en la parte inferior -->
        <Button Text="Ingresar" 
                BackgroundColor="Blue"
                TextColor="White"
                FontSize="18"
                AbsoluteLayout.LayoutBounds="0.5, 0.8, 200, 50"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                HorizontalOptions="Center"/>
    </AbsoluteLayout>
</ContentPage>
